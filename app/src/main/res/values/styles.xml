<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GradientButtonStyle">
        <item name="android:background">@drawable/buttons_background</item>
        <item name="android:textColor">#FFFFFF</item> <!-- Цвет текста, поменяйте при необходимости -->
        <item name="android:padding">16dp</item> <!-- Отступ, измените если нужно -->
    </style>
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/custom_spinner_background</item> <!-- Прозрачный фон -->
        <item name="android:popupBackground">@drawable/spinner_background</item> <!-- Фон выпадающего списка -->
        <item name="android:dropDownSelector">@android:color/transparent</item> <!-- Убираем выделение элементов -->
        <item name="android:spinnerMode">dropdown</item>
    </style>
</resources>